<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/> <solid android:color="#33FFFFFF"/> </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="4dp"/>
                <solid android:color="#33FFFFFF"/> </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="4dp"/>
                <gradient
                    android:startColor="#6A11CB"   android:centerColor="#2575FC"   android:endColor="#00E676"     android:angle="0"              android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>