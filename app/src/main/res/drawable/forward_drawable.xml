<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Border -->
    <item android:id="@+id/border">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/TextColor"
                android:width="5dp" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Inner Background -->
    <item android:id="@+id/background" android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/chattingMessageBox" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
