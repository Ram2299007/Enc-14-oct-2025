<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center">

    <!-- Document Icon -->
    <ImageView
        android:id="@+id/documentIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        android:src="@drawable/documentsvg"
        app:tint="@color/white" />

    <!-- Document Name -->
    <TextView
        android:id="@+id/documentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/documentIcon"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Document.pdf"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_medium" />

    <!-- Document Size -->
    <TextView
        android:id="@+id/documentSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/documentName"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:text="2.5 MB"
        android:textColor="@color/gray3"
        android:textSize="17sp"
        android:fontFamily="@font/poppins_medium" />

    <!-- Selection Number -->
    <TextView
        android:id="@+id/selectionNumber"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/black_background_hover"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>
