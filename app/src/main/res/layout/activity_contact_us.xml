<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent" style="@style/BackgroundColor"
    tools:context=".Screens.privacy_policy">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:backgroundTint="@color/edittextBg"
                    android:background="@drawable/rectelelavation"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/backarrow"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/custome_ripple_circle"
                            android:gravity="center"
                            app:cardCornerRadius="20dp">

                            <LinearLayout
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:gravity="center"
                                app:cardCornerRadius="20dp">

                                <ImageView
                                    style="@style/icontintGlobal"
                                    android:layout_width="25dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center_vertical"
                                    android:padding="2dp"
                                    android:src="@drawable/leftvector" />
                            </LinearLayout>
                        </LinearLayout>


                        <TextView
                            android:id="@+id/setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Contact us"
                            style="@style/TextColor"
                            android:textFontWeight="500"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/get"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/san_pro"
                        android:lineHeight="21dp"
                        android:textSize="16sp"
                        android:text="Get in Touch!"
                        style="@style/TextColor"
                        android:textFontWeight="600" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="14.52dp"
                        android:text="Your Name"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="15sp" />


                    <EditText android:textCursorDrawable="@drawable/cursor_draw"
               android:textSelectHandle="@drawable/custom_handle"
                        android:textSelectHandleLeft="@drawable/custom_handle_left"
                        android:textSelectHandleRight="@drawable/custom_handle_right"
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edittext15simpleradius"
                        android:inputType="textPersonName"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"

                        android:textColor="@color/black_white_cross" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/inter_medium"
                        android:inputType="textEmailAddress"
                        android:lineHeight="14.52dp"
                        android:text="Email"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="15sp" />

                    <EditText android:textCursorDrawable="@drawable/cursor_draw"
               android:textSelectHandle="@drawable/custom_handle"
                        android:textSelectHandleLeft="@drawable/custom_handle_left"
                        android:textSelectHandleRight="@drawable/custom_handle_right"
                        android:id="@+id/email"
                        android:layout_width="match_parent"

                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edittext15simpleradius"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/black_white_cross"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="14.52dp"
                        android:text="Your message"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="15sp" />


                    <androidx.appcompat.widget.AppCompatEditText android:textCursorDrawable="@drawable/cursor_draw"
               android:textSelectHandle="@drawable/custom_handle"
                        android:textSelectHandleLeft="@drawable/custom_handle_left"
                        android:textSelectHandleRight="@drawable/custom_handle_right"
                        android:id="@+id/msg"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/edittext15simpleradius"
                        android:inputType="textMultiLine"
                        android:maxHeight="186dp"
                        android:minHeight="60dp"
                        android:paddingStart="10dp"

                        android:paddingEnd="10dp"
                        android:textColor="@color/black_white_cross" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="24dp"
                        app:cardCornerRadius="20dp">

                        <androidx.appcompat.widget.AppCompatButton

                            android:id="@+id/linear"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@drawable/buttonhoverfordone"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="24dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:text="Send message"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="600"

                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>