<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundColor"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".Screens.payActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:backgroundTint="@color/edittextBg"
        android:background="@drawable/rectelelavation"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/backarrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/custome_ripple_circle"
                android:gravity="center"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        style="@style/icontintGlobal"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:src="@drawable/leftvector" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/inter_medium"
                android:text="Pay"
                style="@style/TextColor"
                android:textFontWeight="500"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginHorizontal="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true">


            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"

                            android:orientation="horizontal"

                            android:visibility="gone">


                            <TextView
                                android:id="@+id/last"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/inter_medium"
                                android:lineHeight="21dp"
                                android:text="Last paid for : "
                                android:textColor="#9EA6B9"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/oct"
                                style="@style/TextColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/inter_bold"
                                android:lineHeight="21dp"
                                android:text="October"
                                android:textFontWeight="600"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"


                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="223dp"
                                android:layout_height="141dp"
                                android:background="@drawable/payrect"
                                android:backgroundTint="@color/buttonColorTheme"

                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/msg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="23dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Lock Screen"
                                    android:textColor="@color/white"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/prof"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Themes"
                                    android:textColor="@color/white"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/msglmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Message Limit"
                                    android:textColor="@color/white"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/inter_bold"
                                        android:gravity="center"
                                        android:lineHeight="21dp"
                                        android:text="1st"
                                        android:textColor="#011224"
                                        android:textFontWeight="600"
                                        android:textSize="16sp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/free1"
                                        style="@style/TextColor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/inter_medium"
                                        android:gravity="center"
                                        android:lineHeight="21dp"
                                        android:text="Paid"
                                        android:textFontWeight="600"
                                        android:textSize="16sp" />
                                </LinearLayout>


                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/checkbox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="14dp"
                                    android:button="@drawable/checkbox_bg" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"

                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"


                            android:visibility="gone">


                            <LinearLayout
                                android:layout_width="223dp"
                                android:layout_height="141dp"
                                android:background="@drawable/transparent"

                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/call"
                                    style="@style/TextColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="23dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Lock Screen"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/videocall"
                                    style="@style/TextColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Themes"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/grpcall"
                                    style="@style/TextColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Message Limit"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/inter_bold"
                                        android:gravity="center"
                                        android:lineHeight="21dp"
                                        android:text="2nd"
                                        android:textColor="#011224"
                                        android:textFontWeight="600"
                                        android:textSize="16sp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/inter_medium"
                                        android:gravity="center"
                                        android:lineHeight="21dp"
                                        android:text="paid"
                                        android:textColor="#011224"
                                        android:textFontWeight="600"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/checkbox2"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="14dp"
                                    android:button="@drawable/checkbox_bg"
                                    android:checked="false" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"

                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"


                            android:visibility="gone">


                            <LinearLayout
                                android:layout_width="223dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/transparent"

                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/theme"
                                    style="@style/TextColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="23dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Theme"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/lockscreen"
                                    style="@style/TextColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="25dp"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/inter_medium"
                                    android:lineHeight="21dp"
                                    android:text="Lock screen"
                                    android:textFontWeight="500"
                                    android:textSize="14sp" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/inter_bold"
                                        android:gravity="center"
                                        android:lineHeight="21dp"
                                        android:text="3rd"
                                        android:textColor="#011224"
                                        android:textFontWeight="600"
                                        android:textSize="16sp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/inter_medium"
                                        android:gravity="center"
                                        android:lineHeight="21dp"
                                        android:text="paid"
                                        android:textColor="#011224"
                                        android:textFontWeight="600"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <androidx.appcompat.widget.AppCompatCheckBox
                                    android:id="@+id/checkbox3"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="14dp"
                                    android:button="@drawable/checkbox_bg"
                                    android:checked="false" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"

                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="50dp"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <LinearLayout
                                android:layout_width="223dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/paynow"
                                    android:layout_width="223dp"
                                    android:layout_height="45dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/buttonhoverfordone"
                                    android:fontFamily="@font/inter_medium"
                                    android:gravity="center"
                                    android:lineHeight="27dp"
                                    android:text="Pay Now"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textFontWeight="700"
                                    android:textSize="18sp"
                                    tools:ignore="TouchTargetSizeCheck" />


                            </LinearLayout>


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="140dp"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="24dp"
                            android:text="After 2 months free trial,\nyou have to pay for this exclusive features."
                            android:textColor="@color/black_white_cross"
                            android:textFontWeight="500"
                            android:textSize="15sp" />


                    </LinearLayout>


                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="180dp">

                    <LinearLayout
                        android:id="@+id/spindata"

                        android:layout_width="223dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/payrect"


                        android:minHeight="141dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/oneM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="23dp"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="21dp"
                            android:text="1 Month"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/threeM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="21dp"
                            android:text="3 Month"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/sixY"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="21dp"
                            android:text="6 Month"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/Year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="21dp"
                            android:text="1 Year"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="14sp" />


                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </RelativeLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/pnglabel"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Enclosure Exclusive Features"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:gravity="end"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/payForMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text="2 months free"
                android:textColor="#9EA6B9"
                android:textFontWeight="500"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/spinner"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:background="@drawable/downvector"
                android:visibility="gone" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>