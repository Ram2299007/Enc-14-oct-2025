<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/call1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/shimmer_coloe"
            app:cardCornerRadius="360dp"
            app:cardElevation="0dp">

            <!-- Add your content inside the CardView -->
            <ImageView
                android:id="@+id/img"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/inviteimg"

                />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:background="@color/shimmer_coloe"
                    android:fontFamily="@font/inter_medium"
                    android:lineHeight="18dp"
                    android:text="Joey Banks"
                    android:textColor="@color/shimmer_coloe"
                    android:textFontWeight="600"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/calling"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="22dp"
                    android:src="@drawable/cllingnewpng"
                    app:tint="@color/shimmer_coloe" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>