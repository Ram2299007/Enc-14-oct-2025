<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/custome_ripple_black"
    android:gravity="center_vertical">

    <!-- Document Icon -->
    <ImageView
        android:id="@+id/documentIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_document"
        android:background="@drawable/document_icon_background"
        android:padding="12dp"
        android:scaleType="centerInside" />

    <!-- Document Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/documentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/documentSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.5 MB"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/documentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:textColor="@color/primary_color"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Selection Indicator -->
    <ImageView
        android:id="@+id/selectionIndicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        android:background="@drawable/selection_circle_background"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:tint="@color/primary_color" />

    <!-- Selection Number -->
    <TextView
        android:id="@+id/selectionNumber"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/selection_number_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>
