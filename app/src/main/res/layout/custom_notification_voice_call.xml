<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="8dp">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ec_modern"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ongoing Voice Call"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_alignTop="@id/notification_icon"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#555"
        android:textSize="14sp"
        android:layout_below="@id/notification_title"
        android:layout_alignStart="@id/notification_title"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnDecline"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/notification_time"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/red_call"
        android:text="Drop"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
