<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/recLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginTop="21dp"
        android:orientation="vertical">

        <View
            android:layout_width="70dp"
            android:layout_height="4dp"
            android:layout_gravity="start"
            android:background="@drawable/bluevector"
            android:backgroundTint="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"

            android:layout_marginTop="4dp"

            android:background="@drawable/message_bg_gray"
            android:minWidth="80dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/receiver_radius"
                android:backgroundTint="#A8E6E5E5"
                android:gravity="start"
                android:padding="2dp">

                <TextView
                    android:id="@+id/receiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"

                    android:fontFamily="@font/inter_bold"
                    android:lineHeight="24dp"
                    android:maxWidth="250dp"

                    style="@style/TextColor"

                    android:textSize="13sp"
                    android:visibility="visible" />
            </LinearLayout>


            <TextView
                android:id="@+id/recMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="19dp"
                android:maxWidth="250dp"
                android:text="xyz"
                style="@style/TextColor"
                android:textFontWeight="400"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/recImg"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:scaleType="centerCrop"

                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/docLyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/receiver_radius"

                android:minWidth="90dp"
                android:minHeight="50dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/docName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="start"
                    android:maxWidth="250dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:text="bhdsjbdsbcdscdsscdcdscdcscscsccddcdcdddcdddddcddcccdddddccddccdcdcddsscsssccsscsd"
                    style="@style/TextColor"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/pagesvg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp">


                    <TextView
                        android:id="@+id/extension"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center_vertical"
                        android:maxLength="4"
                        android:textAllCaps="true"
                        style="@style/TextColor"
                        android:textSize="6sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:maxWidth="250dp"
                            android:minWidth="100dp"
                            android:text="Mr.Ram Lohar"
                            style="@style/TextColor" />

                        <TextView
                            android:id="@+id/cPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:fontFamily="@font/inter_medium"
                            android:maxWidth="250dp"
                            android:text="918379887185"
                            android:textColor="@color/edittextremoveline"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/contact_gradient_cirlce_receiver"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/firstText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:maxLength="1"
                            style="@style/TextColor"
                            android:textSize="16sp" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_back_receiver"
                    android:gravity="center"


                    android:orientation="vertical"
                    android:padding="2dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"

                        android:text="View Contact"
                        android:textAllCaps="true"
                        style="@style/TextColor"
                        android:textSize="11sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/miceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"

                    android:background="@drawable/message_bg_gray"
                    android:backgroundTint="#A8E6E5E5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="7dp">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/micePlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="7dp"

                        android:background="@android:color/transparent"

                        android:scaleX="1.4"
                        android:scaleY="1.4"
                        android:src="@drawable/baseline_play_arrow_24"
                        android:tint="@color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:minWidth="150dp"
                        android:orientation="vertical">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/miceProgressbar"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="19dp"

                            android:max="100"
                            android:progress="0"

                            app:indicatorColor="@color/teal_700"
                            app:indicatorDirectionLinear="leftToRight"
                            app:trackCornerRadius="20dp"
                            app:trackThickness="5dp" />

                        <TextView
                            android:id="@+id/miceTiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="5dp"
                            android:text="0.00"
                            style="@style/TextColor"
                            android:textSize="10sp" />

                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/miceUImage"
                            android:layout_width="50dp"
                            android:layout_height="50dp"


                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_marginEnd="-3dp"
                            android:layout_marginBottom="-2dp"
                            android:src="@drawable/mikesvg"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/recTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="bottom"
                android:text="1:0 am"
                style="@style/TextColor"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>