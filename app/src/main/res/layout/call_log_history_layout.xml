<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/calling_flag_icon"
            style="@style/icontintGlobal"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:src="@drawable/receivedcall" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calling_flag"
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="Incoming call"
                android:textFontWeight="600"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/endTime"
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="7:09"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/pollyy"
                android:layout_width="22dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:background="@drawable/videosvgnew2"
                android:backgroundTint="@color/blue"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout

                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="1.9dp"
                    android:background="@drawable/polysvg"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:orientation="vertical" />


            </LinearLayout>

            <TextView
                android:id="@+id/incomingCallTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="0m 0s"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>