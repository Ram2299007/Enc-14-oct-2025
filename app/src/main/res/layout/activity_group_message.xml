<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.groupMessage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rectelelavation"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/backarrow"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/backarowhover_for_all"

                    android:gravity="center"
                    app:cardCornerRadius="20dp">

                    <ImageView

                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/backarowhover_for_all"
                        android:padding="2dp"
                        android:src="@drawable/leftvector" />

                </LinearLayout>


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="21dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Joey Banks"
                    style="@style/TextColor"
                    android:textFontWeight="500"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/logoBtn"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="15dp"

                        android:src="@drawable/main_logo" />

                    <LinearLayout
                        android:id="@+id/menu"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center"

                        android:background="@drawable/backarowhover_for_all"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="20dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:src="#011224" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/menuPoint"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:src="#00A3E9" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:scaleType="centerCrop"
                            android:src="#9EA6B9" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/touch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/bluevector" />


                <LinearLayout
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"

                    android:layout_marginEnd="16dp"
                    android:background="@drawable/message_bg_blue"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="17dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="24dp"
                        android:text="It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum. "
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="11dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="bottom"
                        android:text="11:00 am"
                        android:textColor="@color/white" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:lineHeight="14.52dp"
                    android:text="Yesterday"
                    android:textColor="#9EA6B9"
                    android:textSize="12sp" />

                \

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginEnd="17dp"
                    android:gravity="end">


                    <View
                        android:id="@+id/view"
                        android:layout_width="80dp"
                        android:layout_height="4dp"

                        android:layout_gravity="center"


                        android:layout_marginBottom="6dp"
                        android:background="@drawable/bluevector"

                        app:layout_constraintBottom_toTopOf="@+id/bluelayout"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <LinearLayout
                        android:id="@+id/bluelayout"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view"

                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"

                        android:background="@drawable/message_bg_blue"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/sendMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="17dp"
                            android:layout_marginTop="5dp"
                            android:maxWidth="287dp"
                            android:fontFamily="@font/inter_medium"
                            android:lineHeight="24dp"
                            android:text="Today I am going to deliver\nyou a speech on the\ntopicof i as sure \nthat you. \n"

                            android:textColor="@color/white"
                            android:textFontWeight="400"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/sendTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|end"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="5dp"

                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="bottom"
                            android:text="1:00 am"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewBlue"
                        android:layout_width="194dp"
                        android:layout_height="45dp"

                        android:layout_marginTop="5dp"
                        android:elevation="20dp"
                        android:visibility="gone"
                        app:cardCornerRadius="4dp"

                        app:layout_constraintEnd_toStartOf="@+id/view"

                        app:layout_constraintStart_toStartOf="@id/bluelayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_goneMarginStart="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kotta_one"
                                android:lineHeight="24dp"
                                android:text="Delete this message"
                                style="@style/TextColor"
                                android:textFontWeight="400"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="24dp"
                                android:src="@drawable/deleteicon" />


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:layout_width="80dp"
                    android:layout_height="4dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/bluevector" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="284dp"
                        android:layout_height="218dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="19dp"
                        android:src="@drawable/elephant" />

                </LinearLayout>

                <View
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="19dp"
                    android:background="@drawable/bluevector" />


                <LinearLayout
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="16dp"

                    android:layout_marginBottom="90dp"
                    android:background="@drawable/message_bg_blue"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="17dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="24dp"
                        android:text="It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum. "
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:textSize="16dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="18dp"
                        android:layout_marginBottom="11dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="bottom"
                        android:text="11:00 am"
                        android:textColor="@color/white" />

                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectbotttom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4.5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:background="@drawable/edittext">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/attachsvg" />


                <EditText android:textCursorDrawable="@drawable/cursor_draw"
               android:textSelectHandle="@drawable/custom_handle"
                        android:textSelectHandleLeft="@drawable/custom_handle_left"
                        android:textSelectHandleRight="@drawable/custom_handle_right"
                    android:id="@+id/messageBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:background="#00000000"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Type Your Text Here"
                    android:inputType="textMultiLine"
                    android:lineHeight="21dp"
                    android:maxLines="3"
                    android:minHeight="48dp"

                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="#9EA6B9"
                    android:textFontWeight="500"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/group"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/callbg"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/send"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/mike" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/menuRect"
            android:layout_width="267dp"
            android:layout_height="138dp"
            android:layout_marginStart="126dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/menurect"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/gropuinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text="Group Info"
                style="@style/TextColor"
                android:textFontWeight="500"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text="Add Member"
                style="@style/TextColor"
                android:textFontWeight="500"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text="Remove Member"
                style="@style/TextColor"
                android:textFontWeight="500"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/deletegrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text="Delete Group"
                style="@style/TextColor"
                android:textFontWeight="500"
                android:textSize="16dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>