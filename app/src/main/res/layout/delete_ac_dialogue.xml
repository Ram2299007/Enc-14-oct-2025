<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:layout_marginStart="40dp"
    app:cardBackgroundColor="@color/cardBackgroundColornew"

    android:layout_marginEnd="40dp"
    android:padding="30dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Are you sure you want to delete an account?"
            android:fontFamily="@font/inter"
            android:textSize="17sp"
            style="@style/TextColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/radius_btn_hover_blue"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="15sp" />
            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/sure"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/button_hover_blue"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/inter"
                android:gravity="center"

                android:layout_gravity="center"
                android:text="Sure"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="15sp" />
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>