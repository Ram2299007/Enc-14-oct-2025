<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contactItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/contact_item_background"
    android:backgroundTint="@color/circlebtnhover"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- Selection Indicator -->
    <View
        android:id="@+id/selectionIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:background="@color/TextColor"
        android:visibility="gone" />

    <!-- Contact Avatar -->
    <LinearLayout
        android:id="@+id/contactAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/contact_avatar_background"
        android:backgroundTint="@color/modetheme2"
        android:gravity="center">

        <TextView
            android:id="@+id/contactInitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="@color/TextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter" />

    </LinearLayout>

    <!-- Contact Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@color/TextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter" />

        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="+1234567890"
            android:textColor="@color/TextColor"
            android:textSize="14sp"
            android:alpha="0.7"
            android:fontFamily="@font/inter" />

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="contact@example.com"
            android:textColor="@color/TextColor"
            android:textSize="14sp"
            android:alpha="0.7"
            android:fontFamily="@font/inter" />

    </LinearLayout>

    <!-- Selection Check Icon -->
    <ImageView
        android:id="@+id/selectionCheckIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/multitick"
        android:visibility="gone"
     />

</LinearLayout>
