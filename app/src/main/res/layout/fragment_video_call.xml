<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragments.videoCallFragment">
    <RelativeLayout
        android:id="@+id/localBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rltdd"
        android:layout_below="@id/label"
        android:layout_marginTop="15dp">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewLast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewAZ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
            
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:visibility="gone">




        <LinearLayout
            android:id="@+id/backarroe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custome_ripple_circle"
            android:gravity="center"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:gravity="center"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/icontintGlobal"
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/leftvector" />
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_border"
            android:padding="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="360dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name1"
                    style="@style/TextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:lineHeight="18dp"
                    android:textFontWeight="600"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/TextColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="4"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="start"
                        android:lineHeight="18dp"
                        android:text="Mobile"

                        android:textFontWeight="600"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/mobile"
                        style="@style/TextColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"

                        android:lineHeight="18dp"

                        android:textFontWeight="600"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/dateLive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutName"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_bold"
        android:lineHeight="18dp"
        android:text="Today"
        android:textColor="@color/gray3"
        android:textFontWeight="700"
        android:textSize="12sp"
        android:visibility="gone" />
    <LinearLayout

        android:id="@+id/backlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/backarrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custome_ripple_circle"
            android:gravity="center"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:gravity="center"
                app:cardCornerRadius="20dp">

                <ImageView
                    style="@style/icontintGlobal"
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/leftvector" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/seeprofile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="21dp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"

                android:textFontWeight="500"
                android:textSize="16sp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/searchlyt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/searchEt"
                    style="@style/TextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Search..."
                    android:lineHeight="24dp"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:textColorHint="#9EA6B9"
                    android:textCursorDrawable="@drawable/cursor_draw"

                    android:textFontWeight="500"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="-2dp"
                    android:background="@color/gray3"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_weight="2.5"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:visibility="gone"
                    android:layout_gravity="end|center"

                    android:layout_marginEnd="15dp"

                    android:src="@drawable/ec_modern" />

                <LinearLayout
                    android:id="@+id/menunew"
                    android:layout_width="40dp"
                    android:visibility="gone"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custome_ripple_circle"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    app:cardCornerRadius="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:src="@color/menuPointColor" />

                    <de.hdodenhof.circleimageview.CircleImageView

                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:src="#00A3E9" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:scaleType="centerCrop"
                        android:src="#9EA6B9" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchData"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backlyt"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/searchLytNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="19.24dp"
                        android:layout_marginStart="23dp"
                        android:background="@color/blue" />


                    <AutoCompleteTextView android:textCursorDrawable="@drawable/cursor_draw"
               android:textSelectHandle="@drawable/custom_handle"
                        android:textSelectHandleLeft="@drawable/custom_handle_left"
                        android:textSelectHandleRight="@drawable/custom_handle_right"
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:background="#00000000"
                        android:fontFamily="@font/inter"
                        android:hint="Search Name or Number"
                        android:inputType="text"
                        android:lineHeight="22.5dp"
                        android:textColor="@color/black_white_cross"
                        android:textColorHint="@color/gray3"
                        android:textFontWeight="500"
                        android:textSize="15sp" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#e4e4ec"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/custome_ripple_circle"
                android:layout_marginEnd="18dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchData"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"


        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/log"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/radius_black_6dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:lineHeight="18dp"
                android:padding="5dp"
                android:text="Last"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/black_vector"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView

                android:id="@+id/contact"

                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/radius_6dp_transp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:lineHeight="18dp"
                android:padding="5dp"
                android:text="A - Z"
                android:textColor="@color/black"

                android:textFontWeight="700"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/black_vector"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center|end"
                android:background="@drawable/custome_ripple_circle"
                android:layout_gravity="center|end"

                android:orientation="vertical"
                app:cardCornerRadius="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:src="@color/menuPointColor" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/menuPoint"
                    android:layout_width="4dp"

                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:src="#00A3E9" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="#9EA6B9" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/contactLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/label">


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/clearcalllog"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"

            android:background="@drawable/menurect"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"

                android:orientation="vertical">

                <TextView
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/microsoft_phagspa"
                    android:lineHeight="24dp"
                    android:text="Clear Log"

                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/rltdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/bottomcaller2"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:backgroundTint="@color/dxPatti"
            android:elevation="10dp"
            android:background="@drawable/rect"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/ftoken"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/device_type"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/callerId"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/photo"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:src="@drawable/callicon"
                android:visibility="gone" />


            <TextView
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1.6"
                android:fontFamily="@font/inter_medium"
                android:gravity="end"
                android:text=""
                android:textFontWeight="500"

                android:visibility="gone" />

            <TextView
                android:id="@+id/mainname"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:lineHeight="21dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:text="call"

                android:textFontWeight="600"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:layout_weight="3"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/call"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/callbg"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="19dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/videosvgnew2"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/pollyyddd"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="1.9dp"
                            android:background="@drawable/polysvg"


                            android:gravity="center"
                            android:orientation="vertical" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:indeterminateTint="@color/TextColor"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_centerInParent="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/noData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="@style/cardBackgroundColor"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/microsoft_phagspa"
                android:gravity="center"
                android:text="Call On Enclosure"
                android:textColor="#646464"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/microsoft_phagspa"
                    android:gravity="center"
                    android:text="Press  "
                    style="@style/TextColor"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/microsoft_phagspa"
                    android:gravity="center"
                    android:text="A - Z  "
                    android:textSize="14sp"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/microsoft_phagspa"
                    android:gravity="center"
                    android:text="for contact"
                    style="@style/TextColor"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>