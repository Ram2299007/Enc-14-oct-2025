<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="50dp">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/cardBackgroundColornew"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Folder Icon -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_folder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/folder"
            android:tint="#032F60"
        />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To send media, allow Enclosure access to your device's photos, media, and files."
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/TextColor"
            android:textSize="15sp"
            android:lineSpacingExtra="3dp" />

        <!-- Hint text -->
        <TextView
            android:id="@+id/subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tap Settings > Permissions, and turn “Photos and videos” on."
            android:textAlignment="center"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/TextColor"
            android:textSize="14sp" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/not_now"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:text="Not now"
                android:textColor="@color/TextColor"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/button_hover4"
                android:text="Settings"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>
