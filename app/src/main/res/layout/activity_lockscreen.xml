<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    style="@style/BackgroundColor"
    tools:context=".Screens.lockscreen">


    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/circle"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_marginStart="0.5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="130dp"
                    android:background="@drawable/elipse"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/bigDegree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/inter_bold"
                        android:gravity="center"
                        android:lineHeight="67.5dp"
                        android:text="0&#xb0;"
                        android:textColor="@color/bluetohovertext2"

                        android:textSize="45sp" />

                </LinearLayout>



                <TextView
                    android:id="@+id/setlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:lineHeight="24dp"
                    android:text="Set Lock Screen"
                    android:textColor="#00A3E9"
                    android:textFontWeight="600"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/threesixty"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:backgroundTint="@color/blue"

                        android:gravity="center_vertical"
                        android:background="@drawable/lockcircle"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                          >

                            <TextView
                                android:id="@+id/degreeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"

                                android:fontFamily="@font/inter_bold"
                                android:lineHeight="24dp"
                                android:text="0&#xb0;"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="3dp"

                                android:background="@drawable/downvector"
                                android:backgroundTint="@color/white"
                                android:entries="@array/degree"
                                android:textColor="@android:color/white"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/set"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/lockcircle"
                        android:backgroundTint="@color/cs_circle_color"

                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/setImg"
                            android:layout_width="45dp"
                            app:tint="@color/blue"
                            android:layout_height="45dp"
                            android:src="@drawable/tick"/>



                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/buttonhoverfordone"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="24dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="Show Degree Line"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="600"

                        android:textSize="16sp" />


                </LinearLayout>


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <me.tankery.lib.circularseekbar.CircularSeekBar
                    android:id="@+id/progressBar"
                    android:layout_width="233dp"
                    android:layout_height="233dp"
                    android:layout_marginTop="105dp"

                    app:cs_circle_color="@color/cs_circle_color"

                    app:cs_circle_stroke_width="18dp"
                    app:cs_disable_progress_glow="true"
                    app:cs_pointer_alpha_ontouch="5"

                    app:cs_pointer_color="@color/white"
                    app:cs_pointer_halo_color_ontouch="@color/white"
                    app:cs_pointer_stroke_width="24dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>

    </ScrollView>

    <include
        layout="@layout/view_custom_toast"
        />


</RelativeLayout>