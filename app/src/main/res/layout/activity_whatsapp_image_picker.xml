<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with Counter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@drawable/bottom_sheet_background"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        <TextView
            android:id="@+id/counterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="0/30"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/managePermissionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="50dp"
            android:gravity="start"

            android:visibility="gone"
            android:padding="10dp"
            android:lineSpacingExtra="2dp"
            android:text="You've given Enclosure permission to access only a select number of photos. Manage"
            android:textColor="@color/chtbtncolor"
            android:textSize="13sp" />


        <!-- Image Grid -->
        <GridView
            android:id="@+id/imageGrid"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:numColumns="4"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:stretchMode="columnWidth"
            android:background="@drawable/bottom_sheet_background"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Cancel Icon - Floating below status bar -->
    <LinearLayout
        android:id="@+id/cancelButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custome_ripple_circle"
        android:gravity="center"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:gravity="center"
            app:cardCornerRadius="20dp">

            <ImageView
                style="@style/icontintGlobal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/leftvector"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- Caption bar + Done button (WhatsApp-like) -->
    <LinearLayout
        android:id="@+id/captionlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/editLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|bottom"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/message_box_bg"
            android:backgroundTint="@color/circlebtnhover"
            android:gravity="center_vertical|bottom"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/gallary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/custome_ripple_circle"
                android:gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/attachsvg"
                    app:tint="@color/chtbtncolor" />
            </LinearLayout>

            <EditText
                android:id="@+id/messageBoxMy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:fontFamily="@font/san_pro"
                android:hint="Add Caption"
                android:inputType="textMultiLine|textCapSentences"
                android:lineHeight="21dp"
                android:maxWidth="180dp"
                android:maxLines="4"
                android:minHeight="45dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp"
                android:textColor="@color/TextColor"
                android:textColorHighlight="@color/black_white_crossEmoji"
                android:textColorHint="#9EA6B9"
                android:textCursorDrawable="@drawable/cursor_draw"
                android:textFontWeight="500"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle_left"
                android:textSelectHandleRight="@drawable/custom_handle_right"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/emoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/custome_ripple_circle"
                android:gravity="center"
                android:visibility="gone"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/bitemoji"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/emojisvg" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/multiSelectSendGrpLyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:elevation="10dp"
            android:gravity="center_vertical|bottom"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/multiSelectSmallCounterText"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circular_count_background"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/multiSelectDoneButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/callbg"
                android:elevation="8dp"
                android:enabled="false"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/multiSelectSend"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                    app:tint="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingIndicator"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/TextColor"
        android:layout_gravity="center"
        android:visibility="visible" />

</FrameLayout>
