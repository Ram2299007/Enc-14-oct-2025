<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Screens.whatsTheCode">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"

            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/backarrow"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_marginEnd="5dp"
                android:background="@drawable/custome_ripple_circle"
                android:gravity="center"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:gravity="center"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        style="@style/icontintGlobal"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:src="@drawable/leftvector" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35.19dp"
                android:fontFamily="@font/inter_bold"
                android:lineHeight="60dp"
                android:text="What’s the\ncode?"
                android:textFontWeight="600"
                android:textSize="40dp" />

            <TextView
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text="Enter code we’ve sent to"
                android:textFontWeight="400"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/mob"
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_bold"
                android:lineHeight="24dp"
                android:text="+7856431288"
                android:textFontWeight="400"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/one"
                    style="@style/TextColor"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#5A5E61"
                    android:textCursorDrawable="@drawable/cursor_draw"
                    android:textSelectHandle="@drawable/custom_handle"
                    android:textSelectHandleLeft="@drawable/custom_handle_left"
                    android:textSelectHandleRight="@drawable/custom_handle_right"

                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/two"
                    style="@style/TextColor"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#5A5E61"
                    android:textCursorDrawable="@drawable/cursor_draw"
                    android:textSelectHandle="@drawable/custom_handle"

                    android:textSelectHandleLeft="@drawable/custom_handle_left"
                    android:textSelectHandleRight="@drawable/custom_handle_right"

                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/three"
                    style="@style/TextColor"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#5A5E61"
                    android:textCursorDrawable="@drawable/cursor_draw"
                    android:textSelectHandle="@drawable/custom_handle"
                    android:textSelectHandleLeft="@drawable/custom_handle_left"
                    android:textSelectHandleRight="@drawable/custom_handle_right"


                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/four"
                    style="@style/TextColor"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#5A5E61"
                    android:textCursorDrawable="@drawable/cursor_draw"
                    android:textSelectHandle="@drawable/custom_handle"
                    android:textSelectHandleLeft="@drawable/custom_handle_left"

                    android:textSelectHandleRight="@drawable/custom_handle_right"

                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/five"
                    style="@style/TextColor"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#5A5E61"
                    android:textCursorDrawable="@drawable/cursor_draw"

                    android:textSelectHandle="@drawable/custom_handle"
                    android:textSelectHandleLeft="@drawable/custom_handle_left"
                    android:textSelectHandleRight="@drawable/custom_handle_right"

                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/six"
                    style="@style/TextColor"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#5A5E61"
                    android:textCursorDrawable="@drawable/cursor_draw"
                    android:textSelectHandle="@drawable/custom_handle"
                    android:textSelectHandleLeft="@drawable/custom_handle_left"
                    android:textSelectHandleRight="@drawable/custom_handle_right"

                    android:textSize="14sp"
                    tools:ignore="SpeakableTextPresentCheck" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/inter_medium"
                    android:lineHeight="24dp"
                    android:text="Didn't receive code ?"
                    android:textColor="#9EA6B9"
                    android:textFontWeight="400"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/send_again"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineHeight="24dp"
                    android:text="Send again"
                    android:textFontWeight="400"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/seconds"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/inter_medium"

                    android:lineHeight="24dp"
                    android:textFontWeight="400"
                    android:textSize="16dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/verify"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:backgroundTint="#032F60"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:lineHeight="24dp"
                android:text="Verify"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/TextColor"
        android:visibility="gone" />

</RelativeLayout>