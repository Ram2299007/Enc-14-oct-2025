<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="21dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/calling_flag_icon"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:src="@drawable/receivedcall"
            app:tint="@color/shimmer_coloe" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/calling_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_coloe"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="Incoming call"

                android:textColor="@color/shimmer_coloe"
                android:textFontWeight="600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/shimmer_coloe"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="7:09"
                android:textColor="@color/shimmer_coloe"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/incomingcallIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/videosvg"
                app:tint="@color/shimmer_coloe" />

            <TextView
                android:id="@+id/incomingCallTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:background="@color/shimmer_coloe"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="10m 29s"
                android:textColor="@color/shimmer_coloe"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>