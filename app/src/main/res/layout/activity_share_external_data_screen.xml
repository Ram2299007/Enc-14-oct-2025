<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/black"
    tools:context=".Screens.shareExternalDataScreen">


    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dummyimg"
        android:visibility="gone" />


    <androidx.media3.ui.PlayerView
        android:id="@+id/videoContaner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        app:controller_layout_id="@layout/custom_exoplayer_layout2" app:hide_on_touch="true" app:resize_mode="fit"
        app:show_buffering="when_playing"
        app:show_timeout="3000"
        app:use_controller="true" />

    <LinearLayout
        android:id="@+id/documentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/docName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="Ram"
            android:textColor="@color/gray3"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="size"
            android:textColor="@color/gray3"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:textColor="@color/gray3"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/document_24" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textLinkData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="Text"
            android:textColor="@color/gray3"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="17sp" />


        <ImageView
            android:id="@+id/textIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/textformat"
            app:tint="@color/gray3" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/stroke_contact_row"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:background="@drawable/contact_gradient_cirlce"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/firstText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:maxLength="1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/cnamenamelyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/cName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:maxWidth="250dp"
                    android:minWidth="100dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/inter_medium"
                    android:maxWidth="250dp"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"

            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/editLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical|start"

                android:layout_marginEnd="5dp"
                android:layout_weight="1"



                android:background="@drawable/message_box_bg"
                android:backgroundTint="#232A2B"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/gallary"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:src="@drawable/attachsvg"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/messageBoxMy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"

                    android:background="#00000000"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Add Caption"
                    android:inputType="textMultiLine"
                    android:lineHeight="21dp"
                    android:maxWidth="180dp"
                    android:maxLines="4"
                    android:minHeight="45dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#9EA6B9"
                    android:textColorHint="#9EA6B9"
                    android:textCursorDrawable="@drawable/cursor_draw"
                    android:textFontWeight="500"
                    android:textSelectHandle="@drawable/custom_handle"
                    android:textSelectHandleLeft="@drawable/custom_handle_left"
                    android:textSelectHandleRight="@drawable/custom_handle_right"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sickbarLyt"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="17dp"
                android:background="@drawable/sickbar_svg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/elapsed_time_textview"
                    style="@style/TextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sendGrpLyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:gravity="center_vertical|end"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sendGrp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/callbg"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/send"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/baseline_keyboard_double_arrow_right_24" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/view_custom_toast" />


    <LinearLayout
        android:id="@+id/arrowback"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.4"
        android:background="@drawable/black_background_hover"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:gravity="center"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:src="@drawable/leftvector"
            app:tint="@color/white" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:indeterminateTint="@color/TextColor"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_centerInParent="true"

        android:visibility="gone" />

    <include
        layout="@layout/view_custom_toast"
        />

</RelativeLayout>