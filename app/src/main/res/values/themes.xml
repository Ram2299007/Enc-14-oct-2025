    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">355dp</item>
        <item name="android:background">@drawable/bottom_sheet_radius</item>

    </style>

    <!-- Define a ShapeAppearance style for your 40dp radius -->
    <style name="ShapeAppearance.App.BottomSheetCorners" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
        <!-- Set bottom corners to 0dp if you only want top corners rounded -->
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomSheetDialog2" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- This is crucial: makes the dialog's default window background transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper2</item>
    </style>

    <style name="bottomSheetStyleWrapper2" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">1000dp</item>
        <!-- Apply your custom drawable as the background -->
        <item name="android:background">@drawable/bottom_sheet_radius</item>
        <!-- IMPORTANT: Override the default Material Design shape with your custom shape appearance -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheetCorners</item>
    </style>



