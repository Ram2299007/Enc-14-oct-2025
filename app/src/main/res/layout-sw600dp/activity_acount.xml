<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Screens.Acount">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectelelavation"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/backarrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:background="@drawable/backarowhover_for_all"

                            android:gravity="center"
                            app:cardCornerRadius="20dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/backarowhover_for_all"
                                android:padding="2dp"
                                android:src="@drawable/leftvector" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/cng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="21dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Change Number"
                            style="@style/TextColor"
                            android:textFontWeight="500"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sim1lyt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sim_svg"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sim1"
                            android:layout_width="32dp"
                            android:layout_height="43dp"
                            android:src="@drawable/sim_svg_white" />

                    </LinearLayout>



                    <View
                        android:id="@+id/view1"

                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2.5dp"
                        android:background="@drawable/view" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginStart="2.5dp"
                        android:background="@drawable/view" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="4dp"
                        android:layout_height="4dp"

                        android:layout_marginStart="2.5dp"
                        android:layout_marginEnd="2.5dp"
                        android:background="@drawable/view" />

                    <LinearLayout
                        android:id="@+id/sim2lyt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sim_svg"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/sim2"
                            android:layout_width="32dp"
                            android:layout_height="43dp"
                            android:src="@drawable/sim_svg_white" />

                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/changing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="53dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="start"
                    android:lineHeight="21dp"
                    android:text="changing your phone number will migrate your
account info,groups &amp; settings."
                    style="@style/TextColor"
                    android:textFontWeight="600" />

                <TextView
                    android:id="@+id/before"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/inter"
                    android:gravity="start"
                    android:lineHeight="18dp"
                    android:text="Before proceeding, please confirm that you are able
to receive SMS or calls at your new number."
                    style="@style/TextColor"
                    android:textFontWeight="500"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/you"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/inter"
                    android:gravity="start"
                    android:lineHeight="18dp"
                    android:text="If you have both a new phone &amp; a new number,
first change your number on your old phone."
                    style="@style/TextColor"
                    android:textFontWeight="500"
                    android:textSize="12sp" />


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"

        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/linear"
            android:layout_width="157dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonhoverfordone"
            android:fontFamily="@font/inter_medium"
            android:lineHeight="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="500"

            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>