<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/today"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/shimmer_coloe"
            android:fontFamily="@font/inter_bold"
            android:lineHeight="18dp"
            android:textFontWeight="700"
            android:textSize="12sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="@color/shimmer_coloe"
                app:cardCornerRadius="360dp"

                app:cardElevation="0dp">

                <!-- Add your content inside the CardView -->
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/inviteimg"
                    android:scaleType="centerCrop"

                    />


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/shimmer_coloe"
                            android:fontFamily="@font/inter_bold"

                            android:lineHeight="18dp"
                            android:textFontWeight="600"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/calling_flag"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_weight="4"
                            android:src="@drawable/outgoing"
                            app:tint="@color/shimmer_coloe" />




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/endTime"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"

                                android:background="@color/shimmer_coloe"
                                android:fontFamily="@font/inter_medium"

                                android:lineHeight="18dp"
                                android:textFontWeight="600"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/call1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_weight="5"
                    android:gravity="center|end"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/cllingnewpng"
                        app:tint="@color/shimmer_coloe" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>