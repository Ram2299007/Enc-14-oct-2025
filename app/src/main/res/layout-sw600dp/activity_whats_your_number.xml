<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Screens.whatsYourNumber">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/backarrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/backarowhover_for_all"
                    android:gravity="center"
                    android:visibility="invisible"
                    app:cardCornerRadius="20dp">

                    <ImageView

                        android:layout_width="37dp"
                        android:layout_height="30dp"
                        android:src="@drawable/arrow" />
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35.19dp"
                    android:fontFamily="@font/inter_bold"
                    android:lineHeight="60dp"
                    android:text="What’s your\nnumber?"
                    android:textColor="@color/appThemeColor"
                    android:textFontWeight="600"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineHeight="24dp"
                    android:text="We’ll send you a code to verify your number"
                    android:textColor="#9EA6B9"
                    android:textFontWeight="400"
                    android:textSize="16dp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/editLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/state_active_spinner"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/countrycode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/inter"
                            android:gravity="center"
                            android:text="+1"
                            android:textColor="@color/black_faint"
                            android:textFontWeight="400"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/mobileEdit"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/inter"
                            android:gravity="start|fill_vertical"
                            android:textCursorDrawable="@drawable/cursor_draw"
                              android:textSelectHandle="@drawable/custom_handle"
                        android:textSelectHandleLeft="@drawable/custom_handle_left"
                        android:textSelectHandleRight="@drawable/custom_handle_right"
                            android:hint="Enter mobile"
                            android:inputType="phone"

                            android:textColor="@color/black_faint"
                            android:textColorHint="#9EA6B9"
                            android:textFontWeight="400"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1.7"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="10dp"
                                android:layout_height="0dp"
                                android:layout_gravity="end"

                                android:layout_weight="1"
                                android:src="@drawable/downvector"

                                />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/flagFinal"
                            android:layout_width="40dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="24dp"
                            android:gravity="center"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fontFamily="@font/inter_medium"
                android:backgroundTint="#032F60"
                android:lineHeight="24dp"
                android:text="Send code"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="16dp" />
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>