<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".Screens.themeScreen">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@drawable/rectelelavation"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/backarrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/backarowhover_for_all"

                    android:gravity="center"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/backarowhover_for_all"
                        android:padding="2dp"
                        android:src="@drawable/leftvector" />

                </LinearLayout>


                <TextView
                    android:id="@+id/theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="21dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Theme"
                    style="@style/TextColor"
                    android:textFontWeight="500"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="211.5dp"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/statusbarsvg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/logoBtn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"

                    android:layout_marginStart="20dp"

                    android:src="@drawable/ec_modern" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="24dp"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:id="@+id/menu"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center"
                        android:background="@drawable/backarowhover_for_all"

                        android:gravity="center"
                        android:orientation="vertical"
                        app:cardCornerRadius="20dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="1.7dp"
                            android:layout_height="1.7dp"
                            android:layout_gravity="end|center_vertical"
                            android:src="#011224" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/menuPoint"
                            android:layout_width="1.7dp"
                            android:layout_height="1.7dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginTop="3dp"
                            android:src="#00A3E9" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="1.7dp"
                            android:layout_height="1.7dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginTop="3dp"
                            android:src="#9EA6B9" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginEnd="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"

                        android:layout_gravity="end"
                        android:src="@drawable/search" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mainlinear"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"

                        android:layout_gravity="end"
                        android:src="@drawable/downarrowslide" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/chatdummynew"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="15dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/noti1"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/notiback"
                        android:backgroundTint="@color/blue"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="7sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="75dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/noti2"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/notiback"
                        android:backgroundTint="@color/blue"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="7sp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="118dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/noti3"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/notiback"
                        android:backgroundTint="@color/blue"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter"
                            android:text="4"
                            android:textColor="@color/white"
                            android:textSize="7sp" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/bottomrect"
        android:orientation="vertical">


        <HorizontalScrollView
            android:id="@+id/horiScroll"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/app_name"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/def"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/mainthemesvg" />

                <ImageView
                    android:id="@+id/pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/pinksvg" />

                <ImageView
                    android:id="@+id/popati"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/popati" />

                <ImageView
                    android:id="@+id/red1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/redsvg" />

                <ImageView
                    android:id="@+id/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/bluesvg" />

                <ImageView
                    android:id="@+id/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/orngsvg" />

                <ImageView
                    android:id="@+id/faintblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/graysvg" />


                <ImageView
                    android:id="@+id/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/faintyellosvg" />

                <ImageView
                    android:id="@+id/greensvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/greensvgnew" />

                <ImageView
                    android:id="@+id/darkpink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/voiletsvg" />

                <ImageView
                    android:id="@+id/red2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/red2svg" />


            </LinearLayout>


        </HorizontalScrollView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            app:cardCornerRadius="360dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:layout_marginBottom="20dp"
            >
            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:lineHeight="27dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>