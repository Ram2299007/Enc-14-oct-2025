<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/recLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <View
            android:layout_width="99.5dp"
            android:layout_height="4dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"

            android:background="@drawable/bluevector"
            android:backgroundTint="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:minWidth="99.5dp"

            android:layout_marginTop="6dp"
            android:background="@drawable/message_bg_gray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recMessage"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text=""
                style="@style/TextColor"
                android:textFontWeight="400"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/recTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="bottom"
                android:text="1:0 am"
                style="@style/TextColor"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sendLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <View
            android:id="@+id/viewnew"
            android:layout_width="99.5dp"
            android:layout_height="4dp"


            android:layout_gravity="end"

            android:background="@drawable/bluevector" />

        <LinearLayout
            android:id="@+id/llnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"

            android:background="@drawable/message_bg_blue"


            android:minWidth="99.5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/sendMessage"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="24dp"
                android:text=""
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/sendTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"

                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_medium"
                android:gravity="bottom"
                android:text="1:00 am"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>