<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Screens.notinew">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rectelelavation"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/backarrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:background="@drawable/backarowhover_for_all"

                            android:gravity="center"
                            app:cardCornerRadius="20dp">


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/backarowhover_for_all"
                                android:padding="2dp"
                                android:src="@drawable/leftvector" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="21dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Settings"
                            style="@style/TextColor"
                            android:textFontWeight="500"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/con"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:lineHeight="21dp"
                            android:text="Conversation tones"
                            style="@style/TextColor"
                            android:textFontWeight="600" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchcall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            app:thumbTint="@color/white"
                            app:track="@drawable/bg_track2blue" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/inter_medium"
                        android:lineHeight="18dp"
                        android:text="Play sounds for incoming and outgoing\nmessages"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"
                        android:text="Messages"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/noti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineHeight="21dp"

                        android:text="Notification tone"
                        style="@style/TextColor"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/defaut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"

                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"

                        android:text="Default ( whoop-doop)"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/vibrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineHeight="21dp"

                        android:text="Vibrate"
                        style="@style/TextColor"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"

                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"

                        android:text="Default"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineHeight="21dp"

                        android:text="Light"
                        style="@style/TextColor"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"

                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"

                        android:text="white"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"
                        android:text="Calls"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/ring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineHeight="21dp"

                        android:text="Ringtone"
                        style="@style/TextColor"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/def"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"

                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"

                        android:text="Default"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/vibratse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineHeight="21dp"

                        android:text="Vibrate"
                        style="@style/TextColor"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"

                        android:fontFamily="@font/inter"
                        android:lineHeight="18dp"

                        android:text="Default"
                        style="@style/TextColor"
                        android:textFontWeight="400"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>