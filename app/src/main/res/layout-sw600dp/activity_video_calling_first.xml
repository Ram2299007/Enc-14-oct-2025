<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/callnewmodernbg"
    tools:context=".Screens.videoIncomingCallingFirst">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="118dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/user" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/inter_medium"
            android:lineHeight="18dp"
            android:text="Joey Banks"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/videocall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video call"
            android:layout_marginTop="17dp"

            android:textFontWeight="500"
            android:textSize="20sp"
            android:lineHeight="30dp"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <View
            android:id="@+id/dismissCall"
            android:layout_width="70dp"
            android:layout_marginEnd="90dp"
            android:layout_height="70dp"
            android:background="@drawable/cancel"/>


        <View
            android:id="@+id/acceptCall"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_call_accept"/>





    </LinearLayout>






</RelativeLayout>