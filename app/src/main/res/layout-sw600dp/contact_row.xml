<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_effect_for_chattting_hover_all"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10.5dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10.5dp"

            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="10dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/radius5"
                android:scaleType="centerCrop"

                android:src="@drawable/inviteimg" />


            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:lineHeight="18dp"
                android:text="Unknown Number"
                style="@style/TextColor"
                android:textFontWeight="600"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/userInvite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1.7"
                android:fontFamily="@font/inter_bold"
                android:gravity="end"
                android:lineHeight="24dp"
                android:text="I n v i t e"
                android:textColor="#012231"

                android:textFontWeight="700"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>